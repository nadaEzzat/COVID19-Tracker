<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Red</item>
       <item name="colorAccent">@color/cardview_dark_background</item>

    </style>
    <!-- This style is for the splash screen -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">10dp</item>
        <item name="contentPaddingBottom">@dimen/dp_double</item>
        <item name="contentPaddingTop">@dimen/dp_double</item>
        <item name="contentPaddingLeft">@dimen/dp_double</item>
        <item name="contentPaddingRight">@dimen/dp_double</item>
        <item name="cardBackgroundColor">@color/backgroundWhite</item>
    </style>
</resources>
